{
    "name": "@fishtech/eslint-config",
    "version": "2.0.0",
    "description": "Fishtech's shareable eslint configuration",
    "main": "index.js",
    "directories": {
        "lib": "lib"
    },
    "scripts": {
        "lint": "eslint .",
        "test": "jest",
        "coverage": "jest --coverage",
        "build": "exit 0",
        "deploy": "exit 0",
        "checks": "rm -rf node_modules && NODE_ENV=development npm ci && npm run test && npm run coverage && DEPLOY_TARGET=development npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FishtechCSOC/eslint-config-fishtech.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/FishtechCSOC/eslint-config-fishtech/issues"
    },
    "homepage": "https://github.com/FishtechCSOC/eslint-config-fishtech#readme",
    "contributors": [
        {
            "name": "Brandon Ramsey",
            "email": "Brandon.Ramsey@fishtech.group",
            "url": "https://fishtech.group"
        },
        {
            "name": "Michael Wilson",
            "email": "Michael.Wilson@fishtech.group",
            "url": "https://fishtech.group"
        },
        {
            "name": "James Grow",
            "email": "James.Grow@fishtech.group",
            "url": "https://fishtech.group"
        }
    ],
    "peerDependencies": {
        "eslint": "^5.12.1"
    },
    "devDependencies": {
        "jest": "^24.0.0"
    },
    "dependencies": {
        "babel-eslint": "^10.0.1",
        "eslint": "^5.12.1",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-import": "^2.15.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-react": "^7.12.4"
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "collectCoverageFrom": [
            "**/*.js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/coverage/"
        ]
    }
}
